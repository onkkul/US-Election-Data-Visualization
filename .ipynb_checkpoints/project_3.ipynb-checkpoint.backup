    "    dataframe = dataframe.rename(columns={\"County\": \"county\"}, errors='ignore')\n",
    "    json_dump = dataframe.to_dict(orient='records')\n",
    "    # dataframe.to_json(file.replace('.csv', '.json'), orient='records')\n",
    "\n",
