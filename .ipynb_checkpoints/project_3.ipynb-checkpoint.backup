    "############################# Database Loading #############################\n",
    "\n",
    "pwd = dirname(realpath('__file__'))\n",
    "datapath = pwd + '\\ archive'.replace(' ', '')\n",
    "\n",
    "collections = [file for file in listdir(datapath) if isfile(join(datapath, file))]\n",
    "\n",
    "for file in collections:\n",
